<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

    </data>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5dp"
            app:cardElevation="@dimen/_5dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8dp">

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_22sp"
                    android:padding="@dimen/_3dp"
                    android:layout_marginTop="@dimen/_3dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@id/jobRequest"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/jobRequest"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:padding="@dimen/_3dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Title" />

                <TextView
                    android:id="@+id/estimateNo"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:padding="@dimen/_3dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/jobRequest" />

                <TextView
                    android:id="@+id/startDate"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:padding="@dimen/_3dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/estimateNo" />

                <TextView
                    android:id="@+id/approve"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:padding="@dimen/_3dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/startDate" />

                <TextView
                    android:id="@+id/projectManager"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:padding="@dimen/_3dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/approve" />

                <TextView
                    android:id="@+id/superIntendent"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:padding="@dimen/_3dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/projectManager" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
</layout>
